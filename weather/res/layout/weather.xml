<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="@dimen/global_marginLeft"
        android:layout_marginRight="@dimen/global_marginRight"
        android:layout_marginTop="4dp"
        android:orientation="vertical"
        android:padding="@dimen/global_padding" >

        <LinearLayout
            android:id="@+id/layout_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/global_marginBottom"
            android:background="@drawable/cardplus"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/cityTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dip"
                    android:layout_marginLeft="15dip"
                    android:layout_marginRight="5dip"
                    android:layout_marginTop="5dip"
                    android:text="滕州"
                    android:textColor="@color/card_text_light"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/todayIV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_weight="2"
                    android:adjustViewBounds="true"
                    android:maxHeight="85dp"
                    android:maxWidth="85dp"
                    android:src="@drawable/weather_sunny" />

                <TextView
                    android:id="@+id/tempTV"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="0dip"
                    android:layout_marginLeft="15dip"
                    android:layout_marginRight="5dip"
                    android:layout_marginTop="5dip"
                    android:layout_weight="2"
                    android:text="11°"
                    android:textColor="@color/card_text_light"
                    android:textSize="@dimen/title" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dip"
                    android:layout_weight="2"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tempTodayTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="0dip"
                        android:layout_marginLeft="1dip"
                        android:layout_marginRight="5dip"
                        android:layout_marginTop="0dip"
                        android:text="10-24"
                        android:textColor="@color/card_text_light"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/todayweaTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="0dip"
                        android:layout_marginLeft="1dip"
                        android:layout_marginRight="5dip"
                        android:layout_marginTop="0dip"
                        android:text="晴"
                        android:textColor="@color/card_text_light"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/windTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dip"
                        android:layout_marginLeft="1dip"
                        android:layout_marginRight="5dip"
                        android:layout_marginTop="0dip"
                        android:text="微风"
                        android:textColor="@color/card_text_light"
                        android:textSize="18sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/PMTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0dip"
                    android:layout_marginLeft="15dip"
                    android:layout_marginRight="5dip"
                    android:layout_marginTop="0dip"
                    android:text="PM2.5:"
                    android:textColor="@color/card_text_light"
                    android:textSize="18sp" />

                <LinearLayout
                    android:id="@+id/PMBG"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/PM2TV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="0dip"
                        android:layout_marginLeft="5dip"
                        android:layout_marginRight="5dip"
                        android:layout_marginTop="0dip"
                        android:text="246"
                        android:textColor="@color/you"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/PM3TV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="0dip"
                        android:layout_marginLeft="5dip"
                        android:layout_marginRight="5dip"
                        android:layout_marginTop="0dip"
                        android:text="中度污染"
                        android:textColor="@color/you"
                        android:textSize="18sp" />
                </LinearLayout>
             </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dip"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:layout_marginTop="5dip"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tomrrowTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="SUN"
                        android:textColor="@color/card_text_light"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/tomrrowweaIV"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:maxHeight="60dp"
                        android:maxWidth="60dp"
                        android:src="@drawable/weather_sunny" />

                    <TextView
                        android:id="@+id/tomrrowweaTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="晴"
                        android:textColor="@color/card_text_light"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tomrrowtempTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="14-25"
                        android:textColor="@color/card_text_light"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/secondTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="MON"
                        android:textColor="@color/card_text_light"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/secondweaIV"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:maxHeight="60dp"
                        android:maxWidth="60dp"
                        android:src="@drawable/weather_sunny" />

                    <TextView
                        android:id="@+id/secondweaTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="晴"
                        android:textColor="@color/card_text_light"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/secondtempTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="14-25"
                        android:textColor="@color/card_text_light"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/thirdTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="TUE"
                        android:textColor="@color/card_text_light"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/thirdweaIV"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:maxHeight="60dp"
                        android:maxWidth="60dp"
                        android:src="@drawable/weather_sunny" />

                    <TextView
                        android:id="@+id/thirdweaTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="晴"
                        android:textColor="@color/card_text_light"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/thirdtempTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="14-25"
                        android:textColor="@color/card_text_light"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>